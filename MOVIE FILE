  <div id="movie-sections"></div>

  <script>
    const movieData = {
      English: [
        {
          title: "English Movie 1",
          thumbnail: "https://via.placeholder.com/300x160?text=English+1",
          video: "movies/english/movie1/videos/movie1.mp4"
        }
      ],
      Hindi: [
        {
          title: "Hindi Movie 1",
          thumbnail: "https://via.placeholder.com/300x160?text=Hindi+1",
          video: "movies/hindi/movie1/videos/movie1.mp4"
        }
      ],
      Tamil: [
        {
          title: "Tamil Movie 1",
          thumbnail: "https://via.placeholder.com/300x160?text=Tamil+1",
          video: "movies/tamil/movie1/videos/movie1.mp4"
        }
      ],
      Malayalam: [
        {
          title: "Malayalam Movie 1",
          thumbnail: "https://via.placeholder.com/300x160?text=Malayalam+1",
          video: "movies/malayalam/movie1/videos/movie1.mp4"
        }
      ],
      Telugu: [
        {
          title: "Telugu Movie 1",
          thumbnail: "https://via.placeholder.com/300x160?text=Telugu+1",
          video: "movies/telugu/movie1/videos/movie1.mp4"
        }
      ],
      Kannada: [
        {
          title: "Kannada Movie 1",
          thumbnail: "https://via.placeholder.com/300x160?text=Kannada+1",
          video: "movies/kannada/movie1/videos/movie1.mp4"
        }
      ]
    };

    function createMovieSections() {
      const container = document.getElementById("movie-sections");

      for (let language in movieData) {
        const section = document.createElement("div");
        section.classList.add("language-section");

        const title = document.createElement("div");
        title.classList.add("language-title");
        title.textContent = `${language} Movies`;

        const thumbnailContainer = document.createElement("div");
        thumbnailContainer.classList.add("thumbnail-container");

        movieData[language].forEach(movie => {
          const card = document.createElement("div");
          card.classList.add("thumbnail");
          card.setAttribute("data-title", movie.title.toLowerCase());

          const h2 = document.createElement("h2");
          h2.textContent = movie.title;

          const img = document.createElement("img");
          img.src = movie.thumbnail;
          img.alt = `${movie.title} Thumbnail`;
          img.onclick = () => toggleMovie(img, movie.video);

          const video = document.createElement("video");
          video.controls = true;
          video.classList.add("hidden");

          const source = document.createElement("source");
          source.src = movie.video;
          source.type = "video/mp4";

          video.appendChild(source);
          card.appendChild(h2);
          card.appendChild(img);
          card.appendChild(video);
          thumbnailContainer.appendChild(card);
        });

        section.appendChild(title);
        section.appendChild(thumbnailContainer);
        container.appendChild(section);
      }
    }

    function toggleMovie(imgElement, moviePath) {
      const videoElement = imgElement.nextElementSibling;
      const videoSource = videoElement.querySelector('source');

      if (videoElement.classList.contains('hidden')) {
        videoSource.src = moviePath;
        videoElement.load();
        videoElement.classList.remove('hidden');
      } else {
        videoElement.pause();
        videoElement.classList.add('hidden');
      }
    }

    function filterMovies() {
      const searchValue = document.getElementById("search-bar").value.toLowerCase();
      const allCards = document.querySelectorAll(".thumbnail");

      allCards.forEach(card => {
        const title = card.getAttribute("data-title");
        if (title.includes(searchValue)) {
          card.style.display = "block";
        } else {
          card.style.display = "none";
        }
      });
    }

    // Init
    createMovieSections();
  </script>
